@using BugTrackerTry.Enums
@using BugTrackerTry.Data
@using Microsoft.EntityFrameworkCore  
@inject ApplicationDbContext context  
@model BugTrackerTry.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"></label>
                <select class="form-control btn-block" name="ProjectOptionSelect" id="ProjectOptionSelect">
                    @foreach(Project project in context.Projects)
                    {
                        <option value="@project.Name" name="projectOption" id="@project.Name">@project.Name</option>
                    }
                </select>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <input asp-for="Body" class="form-control" />
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketStatus" class="control-label"></label>
                <select asp-for="TicketStatus" class="form-control">
                    @foreach (string ticketStatus in Enum.GetNames(typeof(TicketStatus)))
                    {
                        <option value="@ticketStatus" name="ticketStatusOption" id="@ticketStatus">@ticketStatus</option>
                    }
                </select>
                <span asp-validation-for="TicketStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketType" class="control-label"></label>
                <select asp-for="TicketType" class="form-control">
                    @foreach (string ticketType in Enum.GetNames(typeof(TicketType)))
                    {
                        <option value="@ticketType" name="ticketTypeOption" id="@ticketType">@ticketType</option>
                    }
                </select>
                <span asp-validation-for="TicketType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="file" name="AttachmentFile" id="AttachmentFile" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
