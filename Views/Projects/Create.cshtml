@using Microsoft.EntityFrameworkCore
@using BugTrackerTry.Data
@inject ApplicationDbContext context  
@model BugTrackerTry.Models.Project

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-9">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <div class="row">
                    <div class="col-4">
   
                            <select class="form-control btn-block" id="UserOptionSelect">
                                @foreach (var user in context.Users)
                                {
                                    <option value="@user" name="UserOption" id="@user">@user</option>
                                }
                            </select>

                    </div>
                    <div class="col-4">
                        <button name="Add" onclick="AddProjectUser()" type="button" class="btn btn-dark btn-block">Add</button>
                        <button name="Delete" onclick="DeleteProjectUser()" type="button" class="btn btn-dark btn-block">Delete</button>

                    </div>
                    <div class="col-4">

                        <select class="btn-block" name="UserList" id="UserList" multiple></select>

                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script type="text/javascript" src="~/js/projects.js"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
